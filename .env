# backend/.env
NODE_ENV=development
PORT=7001

# Database
DATABASE_URL="postgresql://postgres@localhost:5432/health_academy_db"

# JWT
JWT_SECRET=yourSuperSecretKey
JWT_EXPIRES_IN=1d


# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email (for notifications)
EMAIL_HOST=*********************
EMAIL_PORT=************
EMAIL_USER=***********
EMAIL_PASS=***************

# Payment (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60 * 1000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
